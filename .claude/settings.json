{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/educational-prompt-enhancer.sh"
          }
        ]
      },
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command", 
            "command": ".claude/scripts/documentation-tracker.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": {
          "tools": ["Write", "Edit", "MultiEdit", "Bash"]
        },
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/code-standards-validator.sh"
          }
        ]
      },
      {
        "matcher": {
          "tools": ["Bash"]
        },
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/git-push-blocker.sh"
          }
        ]
      }
    ]
  }
}